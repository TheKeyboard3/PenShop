@model IEnumerable<int>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["FountainPens"];
}

<h1>@Localizer["FountainPens"]</h1>

<p>
    <a asp-controller="Pen" asp-action="Index">@Localizer["Pens"]</a> |
    <a asp-action="Create">@Localizer["CreateNew"]</a>
</p>
<div class="container">
    <div class="row">
        @foreach (var item in Model) {
            @Html.RenderAction("ProductCard", new {id = item});
        }
    </div>
</div>

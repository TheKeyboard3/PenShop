@using Microsoft.AspNetCore.Identity
@using PenShop.Models

@inject UserManager<IdentityUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@model PenShop.Models.NibAccessory

@{
    ViewData["Title"] = "Nib(product) details";
}

<h1>Details</h1>

<div>
    <h4>Nib(product)</h4>
    <hr />
    <img src="~/images/@Model.ImageNameForDisplay"
        width="1000" height="800"
        asp-append-version="true" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nib)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nib.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    @if (user is Administrator){
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> <a>|</a>
    }
    @if (user is Customer){
        <a asp-action="Order" asp-route-id="@Model?.Id">Order</a> <a>|</a>
    }else if(user is null){
        <a>Please register to make an order</a> <a>|</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
